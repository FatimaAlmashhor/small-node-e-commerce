<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.9.2/tailwind.min.css"> -->
  <link rel="stylesheet" href="dist/output.css">
  <style>
    .dropdown:hover .dropdown-menu {
      display: block;
    }
  </style>
  <%- include('title') %>
</head>

<body>
  <%- include('header') %>
    <div class="bg-white">
      <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
        <h2 class="text-2xl font-extrabold tracking-tight text-gray-900">Customers also purchased</h2>

        <div class="p-10">

          <div class="dropdown inline-block relative">
            <button class="bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded inline-flex items-center">
              <span class="mr-1">All</span>
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
              </svg>
            </button>
            <ul class="dropdown-menu absolute hidden text-gray-700 pt-1 z-50">

              <% if (categories==undefined) { %>
                <p>loading ...</p>
                <% } else{%>

                  <% for( let index=0; index < categories.length; index++ ) { %>
                    <p>
                      <li class=""><a class="rounded-t my-1 bg-gray-200 hover:bg-gray-400 py-2 px-4 block whitespace-no-wrap"
                          href=
                          <%= "products/category/" + categories[index] %> 
                          >
                          <%= categories[index] %>
                        </a></li>
                    </p>
                    <% } %>
                      <% } %>
            </ul>
          </div>

        </div>
        <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
          <% if (products==undefined) { %>
            <p>loading...</p>
            <!-- here the products -->
            <% }else{ %>
              <% for( let index=0; index < products.length; index++ ) { %>
                <h1>
                  <div class="group relative">
                    <div
                      class="w-full min-h-80 bg-gray-200 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
                      <img src="
                              <%= products[index].images[0] %>
                              " alt="Front of Basic Tee in black."
                        class="w-full h-full object-center object-cover lg:w-full lg:h-full">
                    </div>
                    <div class="mt-4 flex justify-between">
                      <div>
                        <h3 class="text-sm text-gray-700">
                          <a href='
                                  <%= ' /products/'+ products[index].id %>
                            '>
                            <span aria-hidden="true" class="absolute inset-0"></span>

                            <%= products[index].title %>
                          </a>
                        </h3>
                        <p class="mt-1 text-sm text-gray-500">
                          <%= products[index].category %>
                        </p>
                      </div>
                      <p class="text-sm font-medium text-gray-900">
                        $ <%= products[index].price %>
                      </p>
                    </div>
                  </div>

                </h1>
                <% } %>
                  <% } %>

        </div>
      </div>
    </div>
</body>

</html>